                <RadioGroup
                    android:id="@+id/ra_rb12"
                    android:checkedButton="@+id/ra_rb12_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ra_rb12_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

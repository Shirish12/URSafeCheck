                        android:textSize="18sp"/>
                    <RadioButton
                        android:id="@+id/ra_rb11_yes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="Yes"
                        />
                    <RadioButton
                        android:id="@+id/ra_rb11_no"
                        android:layout_width="match_parent"
